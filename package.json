{
  "name": "action-coverage-ratchet",
  "version": "1.0.0",
  "private": true,
  "author": "Millerknoll",
  "description": "GitHub Action to flag pull requests that would reduce code coverage",
  "main": "lib/index.js",
  "keywords": [
    "actions",
    "node",
    "tests",
    "coverage"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "tsc",
    "type-check": "tsc --pretty --noEmit",
    "before-commit": "yarn lint-staged && yarn type-check && yarn test --ci",
    "lint": "eslint . --cache --format codeframe --ext .js,.json,.ts",
    "bundle": "ncc build",
    "test": "jest --coverage",
    "all": "concurrently \"yarn build\" \"yarn test\" \"yarn lint\" && yarn bundle",
    "release": "standard-version --commit-all",
    "release:dry": "standard-version --dry-run",
    "commit": "cz",
    "deduplicate": "yarn-deduplicate",
    "health": "yarn && yarn check && yarn check --integrity && yarn check --verify-tree",
    "nibble": "eslint-nibble . --ext .js,.json,.ts"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,json,ts}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.0.3",
    "@octokit/rest": "^18.12.0",
    "strip-ansi": "^6.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.24",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "@vercel/ncc": "^0.33.3",
    "commitizen": "^4.2.4",
    "concurrently": "^7.0.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-nibble": "^8.0.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-json": "^3.1.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-circus": "^27.5.1",
    "lint-staged": "^12.3.4",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5",
    "yarn-deduplicate": "^3.1.0"
  }
}
